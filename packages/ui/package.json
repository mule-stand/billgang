{
  "name": "@billgang/ui",
  "version": "3.3.0",
  "type": "module",
  "files": ["dist/"],
  "exports": {
    "./button": {
      "import": "./dist/button.js",
      "require": "./dist/button.cjs",
      "types": {
        "import": "./dist/button.d.ts",
        "require": "./dist/button.d.cts"
      }
    },
    "./card": {
      "import": "./dist/card.js",
      "require": "./dist/card.cjs",
      "types": {
        "import": "./dist/card.d.ts",
        "require": "./dist/card.d.cts"
      }
    },
    "./code": {
      "import": "./dist/code.js",
      "require": "./dist/code.cjs",
      "types": {
        "import": "./dist/code.d.ts",
        "require": "./dist/code.d.cts"
      }
    }
  },
  "scripts": {
    "dev": "pnpm run build-watch",
    "lint": "eslint . --max-warnings 0",
    "build": "tsup",
    "build-watch": "tsup --watch",
    "generate:component": "turbo gen react-component"
  },
  "devDependencies": {
    "@billgang/typescript-config": "workspace:*",
    "@turbo/gen": "^1.12.4",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "react": "^18.2.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
